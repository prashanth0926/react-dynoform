{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": ["DOM", "ES2016"],
    "baseUrl": ".", // ✅ Needed for path aliases
    "paths": {
      "@src/*": ["src/*"] // ✅ Optional alias for easier dev
    }
  },
  "include": ["src"], // ✅ Keeps build limited to package code
  "exclude": ["demo", "node_modules"] // ✅ Ignore demo from package build
}
